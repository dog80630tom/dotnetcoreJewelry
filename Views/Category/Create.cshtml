                @Html.DisplayNameFor(model => model.CategoryDescription)
            </th>
            <th></th>
        </tr>

        <tr>
            <td>
                @Html.TextBox("CategoryName")
            </td>
            @*<td>
                @Html.TextBox("CategoryPic")
            </td>*@
